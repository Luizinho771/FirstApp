<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentTeam">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tx1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:fontFamily="@font/coming_soon"
                android:text="Time Atual"
                android:textColor="@color/primary_dark"
                android:textSize="30dp"
                android:textStyle="bold">
            </TextView>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pikachu">
            </ImageView>

            <TextView
                android:id="@+id/tx2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:fontFamily="@font/coming_soon"
                android:text="Pikachu"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold">
            </TextView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dragonite">
            </ImageView>

            <TextView
                android:id="@+id/tx3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:fontFamily="@font/coming_soon"
                android:text="Dragonite"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold">
            </TextView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dracovish">
            </ImageView>

            <TextView
                android:id="@+id/tx4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:fontFamily="@font/coming_soon"
                android:text="Dracovish"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold">
            </TextView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lucario">
            </ImageView>

            <TextView
                android:id="@+id/tx5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:fontFamily="@font/coming_soon"
                android:text="Lucario"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold">
            </TextView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gengar">
            </ImageView>

            <TextView
                android:id="@+id/tx6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:fontFamily="@font/coming_soon"
                android:text="Gengar"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold">
            </TextView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sirfetch">
            </ImageView>

            <TextView
                android:id="@+id/tx7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:fontFamily="@font/coming_soon"
                android:text="Sirfetch"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold">
            </TextView>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>